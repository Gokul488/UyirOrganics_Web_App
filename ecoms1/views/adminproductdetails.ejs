  border: none;
  padding: 4px 8px;
  cursor: pointer;
  border-radius: 5px;
  font-size: 12px;
}
.reset-button {
  background-color: #0A2472;
  color: #fff;
  border: none;
  padding: 2px 4px;
  font-size: 6px;
  border-radius: 5px;
  cursor: pointer;
  margin-top: 2px;
  margin-left: -8px !important;
}
}
@media(max-width:1019px){
  .app-bar{
    width: 100% !important;
    min-width: 1019px !important;
  }
}
@media (max-width: 768px) {
  .product-list-container {
    flex-wrap: wrap;
    justify-content: center;
  }

  .product-grid {
    gap: 10px;
  }

  .product-item {
    width: auto;
  }

  .view-options {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 20px;
}

.view-options .view-buttons {
