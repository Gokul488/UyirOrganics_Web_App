<!DOCTYPE html>
<html>
<head>
  <title>Registration Success</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
    }

    .custom-alert {
      max-width: 400px;
      background-color: #4caf50;
      color: #fff;
      padding: 20px;
      border-radius: 8px;
      margin: 50px auto;
      text-align: center;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .custom-alert h2 {
      margin: 0;
      padding-bottom: 10px;
      font-size: 24px;
    }

    .custom-alert p {
      margin: 0;
      font-size: 18px;
    }

    .close-btn {
      margin-top: 20px;
    }

    .close-btn button {
      background-color: #fff;
      color: #4caf50;
      border: none;
      padding: 10px 20px;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
    }
  </style>
</head>
<body>
  <div class="custom-alert">
    <h2>Registration Success</h2>
    <p>Registration data inserted successfully!</p>
    <div class="close-btn">
      <button onclick="closeAlert()">Close</button>
    </div>
  </div>

  <script>

    const urlParams = new URLSearchParams(window.location.search);
    const adminId = urlParams.get('adminid') || 1;
    const page = urlParams.get('page') || 1; 

    const redirectUrl = `/adminuserdetails?adminid=${adminId}&page=${page}`;

    setTimeout(function() {
      window.location.href = redirectUrl;
    }, 5000);

    function closeAlert() {
      window.location.href = redirectUrl;
    }
  </script>
</body>
</html>
