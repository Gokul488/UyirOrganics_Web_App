<!DOCTYPE html>
<html>
<head>
  <title>My Profile</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f3f3f3;
      margin: 0;
      padding: 0;
    }

    .profile-container {
      max-width: 600px;
      margin: 40px auto;
      padding: 30px; 
      background-color: #ffffff;
      border-radius: 12px;
      box-shadow: 8px 10px 8px 10px rgba(0, 0, 0, 0.2);
    }

    .profile-header {
  display: flex;
  align-items: center; /* Center items vertically */
  justify-content: space-between; /* Create space between the back button and the h1 */
  padding: 10px 20px;
}

.profile-header h1 {
  margin: 0;
  font-size: 30px;
  font-weight: bold;
  text-align: center; /* Center the text */
  flex: 1; /* Allow the h1 to take up available space */
  margin-right: 45px;
}

.back-button {
  margin: 0;
  padding: 7px 9px;
  background-color: #0A2472;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.back-button:hover {
  background-color: #0d5dbb;
}


    .profile-container table {
      width: 100%;
      border-collapse: collapse;
      text-align: left;
    }

    .profile-container th, .profile-container td {
      padding: 12px 10px;
      font-size: 20px;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .profile-container th {
  display: flex; 
  align-items: center; 
  gap: 10px;
  font-weight: bold;
  color: #043b11;
  font-size: 24px;
  text-align: right;
}


    .profile-container th i {
      margin-right: 10px;
      color: #043b11;
    }

    .profile-container td {
      color: #333;
    }

    .profile-container input {
      border: none;
      background: none;
      font-size: 20px;
      width: 100%;
      color: #333;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .profile-container input:read-only {
      color: #000;
      cursor: default;
    }
  </style>
</head>
<body>
  <%- include('./userappbar.ejs') %>
  <div class="profile-header">
    <button onclick="goBack()" class="back-button">Back</button>
    <h1>MY PROFILE</h1>
  </div>
  <div class="profile-container">
    <table>
      <tr>
        <th><i class="fas fa-user"></i> Name</th>
        <td><input type="text" value="<%= user.name %>" readonly></td>
      </tr>
      <tr>
        <th><i class="fas fa-phone-alt"></i> Mobile Number</th>
        <td><input type="text" value="<%= user.mobilenumber %>" readonly></td>
      </tr>
      <tr>
        <th><i class="fas fa-map-marker-alt"></i> Address</th>
        <td><input type="text" value="<%= user.address %>" readonly></td>
      </tr>
      <tr>
        <th><i class="fas fa-map-pin"></i> Pincode</th>
        <td><input type="text" value="<%= user.pincode %>" readonly></td>
      </tr>
      <tr>
        <th><i class="fas fa-envelope"></i> Email</th>
        <td><input type="email" value="<%= user.email %>" readonly></td>
      </tr>
    </table>
  </div>

  <script>
    function goBack() {
      window.history.back();
    }
  </script>
</body>
</html>
