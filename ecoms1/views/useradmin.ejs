<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Admin Users</title>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <style>
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  background-color: #f9f9f9;
}

.header {
  padding: 20px;
  color: black;
  text-align: center;
  margin-bottom: 20px;
  display: flex;
  justify-content: space-between;
}

h1 {
  margin: 0;
}

.filter {
  margin: 10px auto;
  text-align: center;
}

.filter label {
  font-size: 16px;
  margin-right: 10px;
}

.filter select {
  padding: 5px;
  font-size: 14px;
}

.total {
  margin: 10px auto;
  text-align: center;
  font-size: 16px;
}

table {
  width: 90%;
  margin: 0 auto 20px auto;
  border-collapse: collapse;
  background-color: white;
}

table th, table td {
  border: 1px solid #ddd;
  padding: 10px;
  text-align: left;
}

table th {
  background-color: #0A2472;
  color: #fff;
  font-weight: bold;
}

table tbody tr:nth-child(even) {
  background-color: #f9f9f9;
}

.pagination {
  text-align: center;
  margin: 20px 0;
}

.pagination a, .pagination span {
  margin: 0 5px;
  padding: 10px 15px;
  text-decoration: none;
  border: 1px solid #007bff;
  color: #007bff;
  border-radius: 4px;
}

.pagination a:hover {
  background-color: #007bff;
  color: white;
}

.pagination .current {
  background-color: #007bff;
  color: white;
  font-weight: bold;
}

button.update-button {
  padding: 5px 10px;
  border: none;
  background-color:#0A2472;
  color: white;
  border-radius: 4px;
  cursor: pointer;
}

button.update-button:hover {
  background-color: #0d5dbb;
}

#confirmation-dialog {
  font-size: 14px;
  padding: 20px;
}

#confirmation-dialog button {
  padding: 5px 10px;
  margin: 5px;
}



    @media (max-width: 1144px) {
            .app-bar {
                width: 100% !important;
                min-width: 1144px !important; 
            }
        } 
  </style>
</head>
<body>
  <%- include('./adminappbar.ejs', { hideDropdownItems: true }) %>

  <div class="header">
    <div class="filter">
      <label for="filter">Filter by Access:</label>
      <select id="filter">
        <option value="all" <% if (filter === 'all') { %>selected<% } %>>All</option>
        <option value="yes" <% if (filter === 'yes') { %>selected<% } %>>Yes</option>
        <option value="no" <% if (filter === 'no') { %>selected<% } %>>No</option>
      </select>
    </div>
    <h1 style="text-align:center" id="list">USERS LIST</h1>
    
    <p id="total-users" class="total">Total Users: <%= totalUsersCount %></p>
  </div>

  <table>
    <thead>
      <tr>
        <th>S.No</th>
        <th>Name</th>
        <th>Mobilenumber</th>
        <th>Address</th>
        <th>Pincode</th>
        <th>Email</th>
        <th>Store Name</th>
        <th>Store Place</th>
        <th>Access</th>
      </tr>
    </thead>
    <tbody>
      <% userDetails.forEach(function(user, index) { %>
        <tr class="user-row" data-access="<%= user.access %>">
          <td><%= startSerialNumber + index %></td> 
          <td><%= user.name %></td>
          <td><%= user.mobilenumber %></td>
          <td><%= user.address %></td>
          <td><%= user.pincode %></td>
          <td><%= user.email %></td>
          <td><%= user.storeName %></td>
          <td><%= user.storePlace %></td>
          <td>
            <form method="POST" action="/updateAccess" class="update-form">
              <input type="hidden" name="adminId" value="<%= adminId %>">
              <input type="hidden" name="userId" value="<%= user.idusersignin %>">
              <select name="access">
                <option value="1" <% if (user.access === 1) { %>selected<% } %>>Yes</option>
                <option value="0" <% if (user.access === 0) { %>selected<% } %>>No</option>
              </select>
              <button type="button" class="update-button">Update</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

  <div id="confirmation-dialog" style="display: none;" title="Confirmation">
    <p>Are you sure you want to update?</p>
  </div>

  <div class="pagination">
    <% if (totalPages > 0) { %>
      <% if (currentPage > 1) { %>
        <a href="/useradmin?page=<%= currentPage - 1 %>&adminid=<%= adminId %>&filter=<%= filter %>">&laquo; Previous</a>
      <% } %>
  
      <% if (currentPage > 3) { %>
        <a href="/useradmin?page=1&adminid=<%= adminId %>&filter=<%= filter %>">1</a>
        <% if (currentPage > 4) { %>
          <span>...</span>
        <% } %>
      <% } %>
  
      <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
        <% if (i === currentPage) { %>
          <span class="current"><%= i %></span>
        <% } else { %>
          <a href="/useradmin?page=<%= i %>&adminid=<%= adminId %>&filter=<%= filter %>"><%= i %></a>
        <% } %>
      <% } %>
  
      <% if (currentPage < totalPages - 2) { %>
        <% if (currentPage < totalPages - 3) { %>
          <span>...</span>
        <% } %>
        <% if (currentPage + 2 < totalPages) { %>
          <a href="/useradmin?page=<%= totalPages %>&adminid=<%= adminId %>&filter=<%= filter %>"><%= totalPages %></a>
        <% } %>
      <% } %>
  
      <% if (currentPage < totalPages) { %>
        <a href="/useradmin?page=<%= currentPage + 1 %>&adminid=<%= adminId %>&filter=<%= filter %>">Next &raquo;</a>
      <% } %>
    <% } %>
  </div>

  <script>
    document.getElementById('filter').addEventListener('change', function () {
      var selectedFilter = this.value;
      window.location.href = '/useradmin?adminid=<%= adminId %>&filter=' + selectedFilter;
    });

    function goBack() {
      window.history.back();
    }

    $(document).ready(function() {
      $('.update-button').on('click', function(event) {
        event.preventDefault();
        var form = $(this).closest('form');
        $('#confirmation-dialog').dialog({
          resizable: false,
          height: "auto",
          width: 400,
          modal: true,
          buttons: {
            "Confirm": function() {
              $(this).dialog("close");
              form.submit();
            },
            Cancel: function() {
              $(this).dialog("close");
            }
          }
        });
      });

      var selectedFilter = '<%= filter %>';
      if (selectedFilter !== 'all') {
        $('.user-row').each(function() {
          var userAccess = $(this).data('access');
          if ((selectedFilter === 'yes' && userAccess !== 1) || (selectedFilter === 'no' && userAccess !== 0)) {
            $(this).hide();
          }
        });
      }
    });
  </script>
</body>
</html>