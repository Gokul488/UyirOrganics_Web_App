<!DOCTYPE html>
      <html>
      <head>
        <meta charset="UTF-8">
        <title>User Product Details</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=refresh" />
        <style>
         body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
        }

        .app-title {
            text-align: center;
            flex-grow: 1;
        }

        .dropdown {
            position: relative;
        }

        .name {
            color: #f7f3f3;
            margin: 0;
            display: flex;
            align-items: center;
        }

        .dropdown-button {
            background-color: #fff;
            border: none;
            cursor: pointer;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-left: 10px;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 20px;
            font-weight: bold;
            cursor: pointer;
        }

        .close:hover {
            color: #f7f3f3;
        }

        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            justify-content: center;
        }

        a {
            text-decoration: none;
        }

        .product-item {
            box-sizing: border-box;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .product-image-container {
            text-align: center;
        }

        .product-image {
            width: 100%;
            height: auto;
            border-radius: 5px;
            transition: transform 0.3s ease-in-out;
        }

        .product-image:hover {
            transform: scale(1.1);
        }

        .product-details {
            margin-top: 10px;
            text-align: center;
        }

        .product-details h3 {
            margin-top: 0;
        }

        .product-details p {
            margin: 0;
        }

        .product-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .pagination a,
        .pagination span {
            border: 1px solid #ddd;
            padding: 10px 15px;
            margin: 0 5px;
            text-decoration: none;
            color: #007bff;
            border-radius: 5px;
        }

        .pagination a:hover {
            background-color: #007bff;
            color: white;
        }

        .pagination .current {
            background-color: #007bff;
            color: white;
            border: 1px solid #007bff;
        }

        .pagination span {
            cursor: default;
        }       

        .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            padding: 10px;
            margin-top: 10px;
            margin-bottom: 10px;
            white-space: nowrap;
        }
  
        .search-container {
            order: 2;
            flex-grow: 1;
            display: flex;
            justify-content: center;
            margin-right: 500px;
        }

        .center {
            order: 3;
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            font-size: 30px;
            font-weight: bold;
        }

        .filter {
            order: 4;
            margin-right: 100px;
        }

        .filter button {
            background-color: #0A2472;
            color: white;
        }
        .filter button:hover{
            background-color: #0d5dbb;
        }
        .product-item {
    position: relative;
    border: 1px solid #ddd;
    padding: 10px;
    margin: 10px;
    background-color: #fff;
    transition: box-shadow 0.3s ease;
}

.product-item:hover {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}
.reset-button .material-symbols-outlined {
    font-size: 12px; 
    color: #fff;
}
.reset-button{
    background-color: #0A2472;
    border: 2px solid #0A2472;
}
.reset-button:hover{
    background-color: #0d5dbb;
}
button[type="submit"]{
    background-color: #0A2472;
    color: #fff;
    border: 2px solid #0A2472;
}
button[type="submit"]:hover{
    background-color: #0d5dbb;
}
.discount-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: #e60000;
    color: white;
    font-weight: 600; 
    padding: 6px 12px;
    font-size: 14px;
    border-radius: 20px; 
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.2);
    text-transform: uppercase; 
    animation: splash 0.8s ease-out infinite;
}

@keyframes splash {
    0%, 100% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.2);
    }
}
@media(max-width:1084px){
    .filter{
        margin-left: -100px;
    }
}

  </style>
  <link rel="stylesheet" href="/path/to/your/css/styles.css">
  <script src="/path/to/your/fontawesome.js"></script>
</head>
<body>
  
<div class="app-bar">
    <%- include('./userappbar.ejs') %>
</div>


  <div class="container">
 
    <div class="search-container">
        <form action="/userstoredetails/<%= storeId %>?userId=<%= userId %>" method="get" id="searchForm">
            <input type="hidden" name="userId" value="<%= userId %>">
            <input type="hidden" id="categoryInput" name="category" value="<%= selectedCategory %>">
            <input type="text" id="searchInput" name="search" placeholder="Search by product name" value="<%= searchKeyword %>">
    
            <button type="button" onclick="resetSearch()" class="reset-button">
                <span class="material-symbols-outlined">refresh</span>
            </button>
    
            <button type="submit">Search</button>
        </form>
    </div>
    
 
    <h1 class="center">PRODUCTS</h1>
    <div id="product-count" class="product-count">
        Total Products: <span id="product-count-span"><%= products.length %></span>
    </div>
    <div class="filter">
        <select name="category" id="category" onchange="updateCategoryFilter()">
            <option value="">All Categories</option>
            <% categories.forEach(function(category) { %>
                <% if (category && category.trim() !== "") { %>
                    <option value="<%= category %>" 
                        <% if (category === selectedCategory) { %> selected <% } %> >
                        <%= category %>
                    </option>
                <% } %>
            <% }); %>
        </select>
        <button onclick="filterProducts()">Apply Filter</button>
    </div>
    
</div>

<div class="product-grid">
    <% if (products && products.length > 0) { %>
        <% products.forEach(function(product) { %>
            <% const isOutOfStock = product.qty <= 0; %>
            <div class="product-item <%= isOutOfStock ? 'out-of-stock' : '' %>">
                <% if (product.specialOfferContent) { %>
                    <div class="discount-badge">Offer</div>
                <% } %>
                <div class="product-image-container">
                    <% if (product.imagepath) { %>
                        <a href="<%= '/productspage/' + product.productid %>" id="product-link-<%= product.productid %>">
                            <img src="<%= product.imagepath %>" alt="<%= product.productname %>" class="product-image" id="product-image-<%= product.productid %>">

                        </a>
                    <% } else { %>
                        <div class="no-image-placeholder">No Image</div>
                    <% } %>
                </div>
                <div class="product-details">
                    <h3><%= product.productname %></h3>
                    <% if (product.weight_array && product.weight_array.length > 0) { %>
                        <div class="product-options">
                            Weight: 
                            <select onchange="updatePrice(this, '<%= product.productid %>')" id="weight-select-<%= product.productid %>">
                                <% product.weight_array.forEach(function(weight, index) { %>
                                    <option 
                                    value="<%= product.salesprice_array[index] %>" 
                                    data-qty="<%= product.qty_array[index] %>" 
                                    data-productid="<%= product.productid_array[index] %>" 
                                    data-imagepath="<%= product.imagepath_array[index] %>" 
                                    <%= index === 0 ? 'selected' : '' %>
                                  >
                                    <%= weight %>
                                  </option>
                                  
                                <% }); %>
                            </select>
                        </div>
                        <% if (product.specialOfferDiscountPrice) { %>
                            <p class="sales-price">Offer Price: ₹<span id="sales-price-<%= product.productid %>"><%= product.specialOfferDiscountPrice %></span></p>
                        <% } else { %>
                            <p class="sales-price">Sales Price: ₹<span id="sales-price-<%= product.productid %>"><%= product.salesprice_array[0] %></span></p>
                        <% } %>
                    <% } else { %>
                        <p>Weight: <%= product.weight %></p>
                        <% if (product.specialOfferDiscountPrice) { %>
                            <p>Offer Price: ₹<%= product.specialOfferDiscountPrice %></p>
                        <% } else { %>
                            <p>Sales Price: ₹<%= product.salesprice %></p>
                        <% } %>
                    <% } %>
                    <% if (isOutOfStock) { %>
                        <p style="color: red;">Out of Stock</p>
                    <% }  %>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <p>No products found.</p>
    <% } %>
</div>

<div class="pagination">
    <% if (totalPages > 0) { %>
      <% if (currentPage > 1) { %>
        <a href="?userId=<%= userId %>&page=<%= currentPage - 1 %>&category=<%= selectedCategory %>&search=<%= searchKeyword %>">&laquo; Previous</a>
      <% } %>
  
      <% if (currentPage > 3) { %>
        <a href="?userId=<%= userId %>&page=1&category=<%= selectedCategory %>&search=<%= searchKeyword %>">1</a>
        <% if (currentPage > 4) { %>
          <span>...</span>
        <% } %>
      <% } %>
  
      <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
        <% if (i === currentPage) { %>
          <span class="current-page"><%= i %></span>
        <% } else { %>
          <a href="?userId=<%= userId %>&page=<%= i %>&category=<%= selectedCategory %>&search=<%= searchKeyword %>"><%= i %></a>
        <% } %>
      <% } %>
  
      <% if (currentPage < totalPages - 2) { %>
        <% if (currentPage < totalPages - 3) { %>
          <span>...</span>
        <% } %>
        <% if (currentPage + 2 < totalPages) { %>
          <a href="?userId=<%= userId %>&page=<%= totalPages %>&category=<%= selectedCategory %>&search=<%= searchKeyword %>"><%= totalPages %></a>
        <% } %>
      <% } %>
  
      <% if (currentPage < totalPages) { %>
        <a href="?userId=<%= userId %>&page=<%= currentPage + 1 %>&category=<%= selectedCategory %>&search=<%= searchKeyword %>">Next &raquo;</a>
      <% } %>
    <% } %>
  </div>
  
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.all.min.js"></script>
<script>
function resetSearch() {
    document.getElementById('searchInput').value = '';
    document.getElementById('categoryInput').value = ''; 
    document.getElementById('searchForm').submit();
}
function updateCategoryFilter() {
    const categoryDropdown = document.getElementById("category");
    const selectedCategory = categoryDropdown.value;
    document.getElementById("categoryInput").value = selectedCategory;
}
function updatePrice(select, productId) {
  var selectedIndex = select.selectedIndex;
  var selectedSalesPrice = select.value;
  var selectedQty = select.options[selectedIndex].getAttribute('data-qty');
  var selectedProductId = select.options[selectedIndex].getAttribute('data-productid');
  var selectedImagePath = select.options[selectedIndex].getAttribute('data-imagepath');

  var salesPriceElement = document.getElementById('sales-price-' + productId);
  salesPriceElement.textContent = selectedSalesPrice;

  var outOfStockMessage = select.closest('.product-details').querySelector('.out-of-stock-message');
  if (selectedQty <= 0) {
    select.closest('.product-item').classList.add('out-of-stock');
    if (!outOfStockMessage) {
      outOfStockMessage = document.createElement('p');
      outOfStockMessage.className = 'out-of-stock-message';
      outOfStockMessage.style.color = 'red';
      outOfStockMessage.textContent = 'Out of Stock';
      select.closest('.product-details').appendChild(outOfStockMessage);
    }
  } else {
    select.closest('.product-item').classList.remove('out-of-stock');
    if (outOfStockMessage) {
      outOfStockMessage.remove();
    }
  }

  var productLink = document.getElementById('product-link-' + productId);
  productLink.href = '/productspage/' + selectedProductId;

  var productImageElement = document.getElementById('product-image-' + productId);
  var imagePathArray = JSON.parse(localStorage.getItem('imagepath_array-' + productId)); 
  productImageElement.src = imagePathArray[selectedIndex]; 

  localStorage.setItem('selectedWeight-' + productId, selectedIndex);
  localStorage.setItem('selectedSalesPrice-' + productId, selectedSalesPrice);
  localStorage.setItem('imagepath_array-' + productId, JSON.stringify(imagePathArray)); 
}

window.onload = function() {
    function getCookie(name) {
        const cookies = document.cookie.split(';');
        for (let i = 0; i < cookies.length; i++) {
            let cookie = cookies[i].trim();
            if (cookie.startsWith(name + '=')) {
                return cookie.substring(name.length + 1);
            }
        }
        return null;
    }

    const token = getCookie('token');
    if (token) {
        console.log('Token found:', token);
    } else {
        console.log('Token not found');
    }

    updateCartItemCount();

    document.querySelectorAll('.product-item').forEach(function(productItem) {
        const productId = productItem.querySelector('.product-image').id.split('-')[2];
        const selectElement = document.getElementById('weight-select-' + productId);

        if (selectElement && selectElement.options.length > 0) {
            
            console.log(`Checking product ID: ${productId}`);
            console.log(`Options length: ${selectElement.options.length}`);

           
            const firstOption = selectElement.options[0];
            const firstQty = parseInt(firstOption.getAttribute('data-qty'), 10);

           
            console.log(`First option quantity for product ID ${productId}: ${firstQty}`);

            if (firstQty <= 0) {
                productItem.classList.add('out-of-stock');

                let outOfStockMessage = productItem.querySelector('.out-of-stock-message');
                if (!outOfStockMessage) {
                    outOfStockMessage = document.createElement('p');
                    outOfStockMessage.className = 'out-of-stock-message';
                    outOfStockMessage.style.color = 'red';
                    outOfStockMessage.textContent = 'Out of Stock';
                    productItem.querySelector('.product-details').appendChild(outOfStockMessage);
                }
            } else {

                productItem.classList.remove('out-of-stock');
                let outOfStockMessage = productItem.querySelector('.out-of-stock-message');
                if (outOfStockMessage) {
                    outOfStockMessage.remove();
                }
            }
        } else {
          
            console.warn(`Missing select element or options for product ID: ${productId}`);
        }

        const savedIndex = localStorage.getItem('selectedWeight-' + productId);
        const savedSalesPrice = localStorage.getItem('selectedSalesPrice-' + productId);
        if (savedIndex !== null && savedSalesPrice !== null) {
            selectElement.selectedIndex = savedIndex;
            document.getElementById('sales-price-' + productId).textContent = savedSalesPrice;
            updatePrice(selectElement, productId);
        }
    });
}


  function updateCartItemCount() {
      fetch('/api/cart/count')
          .then((response) => response.json())
          .then((data) => {
              const cartItemCount = document.getElementById('cartItemCount');
              if (cartItemCount) {
                  cartItemCount.textContent = data.count;
              }
          })
          .catch((error) => {
              console.error('Error fetching cart item count:', error);
          });
  }

  function toggleDropdown() {
      const dropdownContent = document.getElementById("dropdown");
      const dropdownArrow = document.querySelector(".dropdown-arrow i");

      dropdownContent.classList.toggle("show");
      dropdownArrow.classList.toggle("rotate-arrow");
  }

  function redirectToCart() {
      window.location.href = "/cart";
  }

  function filterProducts() {
    const categoryDropdown = document.getElementById("category");
    const selectedCategory = categoryDropdown.value;

    const currentURL = window.location.href;
    const url = new URL(currentURL);

    url.searchParams.set("category", selectedCategory);
    url.searchParams.set("page", 1);
    window.location.href = url.toString();
}



  document.addEventListener("click", function(event) {
      const dropdownContent = document.getElementById("dropdown");
      const dropdownArrow = document.querySelector(".dropdown-arrow i");

      if (!event.target.closest(".edit-profile-dropdown")) {
          dropdownContent.classList.remove("show");
          dropdownArrow.classList.remove("rotate-arrow");
      }
  });

  function deleteCookie(name) {
      document.cookie = name + '=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;';
  }

  function showCustomAlert() {
      Swal.fire({
        title: 'Logout Confirmation',
        text: 'Are you sure you want to logout?',
          icon: "warning",
          showCancelButton: true,
          confirmButtonText: "Logout",
          cancelButtonText: "Cancel",
          customClass: {
              confirmButton: "action-button",
              cancelButton: "action-button",
          },
      }).then((result) => {
          if (result.isConfirmed) {
              deleteCookie('token');
              window.location.href = "http://localhost:7777";
              history.replaceState(null, null, "http://localhost:7777");
          }
      });
  }

  function changePage(offset) {
      const currentPageElement = document.getElementById("currentPage");
      const currentPage = parseInt(currentPageElement.innerText.split(" ")[1]);

      const targetPage = currentPage + offset;
      const targetButton = offset === -1 ? "prevPage" : "nextPage";
      const targetButtonElement = document.getElementById(targetButton);

      if (targetButtonElement.getAttribute("disabled") !== "disabled") {
          const targetUrl = targetButtonElement.getAttribute("href");
          window.location.href = targetUrl;
      }
  }
</script>

</body> 
</html>