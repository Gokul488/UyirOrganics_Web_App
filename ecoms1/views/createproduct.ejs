<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Add Product</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
        integrity="sha512-K7U7pm0htdFy4XZKoPIdRnTSjFmMhj1zV9LzmZv5wS+9hSJQVgdE/KdS+1aFqu4t9eDvWGytiufhsRY5Itskag=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>

body {
  font-family: Arial, sans-serif;
  background-color: #f2f2f2;
  background-image: url("images/wa1.jpg");
  background-repeat: no-repeat;
  background-size: cover;
  margin: 0; 
  padding: 0;
}

.container {
  background-color: #eff3f4;
  border-radius: 5px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.8);
  padding: 20px 40px;
  width: 900px;
  margin: -10px auto 20px;
}

h2 {
  color: #333;
  text-align: center;
  font-weight: bold;
  margin-top: 0;
}

.form-row {
  margin-bottom: 20px;
  display: flex;
  align-items: center;
}

.form-row label {
  font-weight: bold;
  width: 150px;
  margin-right: 20px;
}

.form-row input,
.form-row select,
.form-row textarea {
  width: calc(100% - 190px);
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
}

input[type="file"] {
  margin-top: 5px;
}

button {
  padding: 10px 15px;
  color: #fff;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  margin-top: 10px;
  background-color: #0A2472;
}

.back-button {
            display: inline-block;
            padding: 9px 9px;
            background-color: #0A2472;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            position: relative;
            overflow: hidden;
            margin-left: 10px;
            font-size: 13px;
            top: 10px;
            width: 48px;
            height: 36px;
        }

        .back-button::before {
            position: absolute;
            top: 0;
            left: 0;
            width: 0;
            height: 100%;
            background-color: #0056b3;
            transition: width 0.3s ease;
        }

        .back-button:hover::before {
            width: 100%;
        }
        .back-button:hover{
  background-color: #0d5dbb;
}
.add {
  background-color: #0A2472; 
  color: white; 
}

.add:hover {
  background-color: #0d5dbb; 
  cursor: pointer; 
}

#image_preview0,
#image_preview1,
#image_preview2,
#image_preview3,
#image_preview4 {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  align-items: center;
  justify-content: flex-start;
  margin-top: 10px;
  margin-left: 160px;
}

.img-div {
  position: relative;
  border: 1px solid #ddd;
  padding: 5px;
  border-radius: 4px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
  display: inline-block; 
}

.img-div img {
  max-width: 200px;
  height: auto;
  display: block;
  margin: 0 auto;
  border-radius: 4px;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
}

.middle {
  position: absolute;
  top: 170px;
  right: -35px; 
  display: block; 
}

.img-div:hover .middle {
  display: block; 
}

.btn-danger {
  background-color: #f44336;
  border: none;
  border-radius: 50%;
  padding: 5px 10px;
  color: white;
  cursor: pointer;
  display: flex; 
  align-items: center;
  justify-content: center;
}

.btn-danger i {
  font-size: 16px;
}

@media (max-width: 768px) {
  .form-row {
    flex-direction: column;
    align-items: flex-start;
  }

  .form-row label,
  .form-row input,
  .form-row select,
  .form-row textarea,
  button[type="submit"] {
    width: 100%;
    margin-left: 0;
  }
}
button[type="submit"]{
    margin-left: 375px;
}
.small-swal-popup {
    width: 500px !important;
    height: 250px;
    padding: 5px !important; 
    font-size: 12px !important; 
}

    </style>
</head>

<body>
    <div class="admin-app-bar">
        <%- include('./adminappbar.ejs', { hideDropdownItems: false }) %>

    </div>
    <button onclick="goBack()" class="back-button">Back</button>

    <div class="container">
        <h2>CREATE PRODUCT</h2>
        <form id="productForm" action="/createproduct" method="post" enctype="multipart/form-data">
            <input type="hidden" name="adminid" value="<%= adminId %>">
            <input type="hidden" id="defaultCategory" value="<%= categoryName %>">
    
            <div class="form-row">
                <label for="producttype">Product Type</label>
                <select id="producttype" name="producttype" required>
                    <option value="product">Product</option>
                    <option value="productfamily">Product Family</option>
                </select>
            </div>
    
            <div id="common-fields">
                <div class="form-row">
                    <label for="productname">Product Name</label>
                    <input type="text" id="productname" name="productname" required>
                </div>
    
                <div class="form-row">
                    <label for="category">Category</label>
                    <input type="text" id="category" name="category" value="<%= categoryName %>" required readonly>
                </div>
                
    
                <div class="form-row">
                    <label for="code">Code</label>
                    <input type="text" id="code" name="code" required>
                </div>
    
                <div class="form-row">
                    <label for="hsn">HSN</label>
                    <input type="text" id="hsn" name="hsn" required>
                </div>
    
                <div class="form-row">
                    <label for="gst">GST</label>
                    <select id="gst" name="gst" required>
                        <option value="Exempt">Exempt</option>
                        <option value="5%">5%</option>
                        <option value="12%">12%</option>
                        <option value="18%">18%</option>
                    </select>
                </div>
    
                <div class="form-row">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" required></textarea>
                </div>
    
                <div class="form-row">
                    <label for="images0">Images</label>
                    <input type="file" id="images0" name="images0" accept="image/*" multiple required>
                </div>
                <div id="image_preview0" style="width: 100%"></div>
            </div>
    
            <div id="product-fields">
                <div class="form-row">
                    <label for="weight">Weight (g/kg/ml/l)</label>
                    <input type="text" id="weight" name="weight[]" required>
                </div>
    
                <div class="form-row">
                    <label for="salesprice">Sales Price (â‚¹)</label>
                    <input type="number" id="salesprice" name="salesprice[]" required>
                </div>
    
                <div class="form-row">
                    <label for="qty">Quantity</label>
                    <input type="number" id="qty" name="qty[]" required oninput="validateQuantity(this)">
                </div>
                
                <div class="form-row">
                    <label for="count">Minimum Quantity count</label>
                    <input type="number" id="count" name="count[]" required>
                </div>
            </div>
            <div id="additional-fields"></div>
            <button type="submit" class="add">Submit</button>
        </form>
    </div>
    
    <script>
$(document).ready(function () {
    var fileArr = [];

    function handleImagePreview(fileInput, previewDivId) {
        var files = fileInput.files;
        var previewDiv = $("#" + previewDivId);
        previewDiv.html("");
        fileArr = [];

        Array.from(files).forEach(function(file, index) {
            if (file.size > 1048576) {
                Swal.fire({
                    icon: 'error',
                    title: 'File Size Error',
                    text: 'File size should be less than 1MB',
                    customClass: {
                        popup: 'small-swal-popup'
                    }
                });
            } else {
                var img = new Image();
                img.onload = function() {
                    if (this.width !== 300 || this.height !== 300) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Dimension Error',
                            text: 'Image dimensions must be 600 x 600 pixels.',
                            customClass: {
                                popup: 'small-swal-popup'
                            }
                        });
                    } else {
                        var uniqueId = 'img-div-' + previewDivId + '-' + index;
                        previewDiv.append(
                            `<div class='img-div' id='${uniqueId}'>
                                <img src='${URL.createObjectURL(file)}' class='img-responsive image img-thumbnail' title='${file.name}'>
                                <div class='middle'>
                                    <button class='btn btn-danger action-icon' data-preview-id='${uniqueId}' data-file-index='${index}'>
                                        <i class='fa fa-trash'></i>
                                    </button>
                                </div>
                            </div>`
                        );
                        fileArr.push({ id: uniqueId, name: file.name, file: file });
                    }
                };

                img.onerror = function() {
                    Swal.fire({
                        icon: 'error',
                        title: 'Invalid Image',
                        text: 'The file ' + file.name + ' is not a valid image.',
                        customClass: {
                            popup: 'small-swal-popup'
                        }
                    });
                };
                img.src = URL.createObjectURL(file);
            }
        });
    }
    var index = 1;
    $(document).on('change', '[id^="images"]', function () {
        var previewId = 'image_preview' + $(this).attr('id').replace('images', '');
        handleImagePreview(this, previewId);
    });

    $(document).on('click', '.action-icon', function (evt) {
        var previewId = $(this).data('preview-id');
        var fileIndex = $(this).data('file-index');
        
        $(`#${previewId}`).remove();

        fileArr = fileArr.filter(function(fileObj) {
            return fileObj.file !== fileArr[fileIndex].file;
        });

        evt.preventDefault();
    });

    $("#productForm").submit(function (event) {
        event.preventDefault();

        var quantity = $("#qty").val();
        if (quantity <= 0) {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Quantity must be greater than 0!',
            });
            return;
        }

        var productType = $("#producttype").val();
        if (productType === "productfamily") {

            var formData = new FormData($("#productForm")[0]);

            $.ajax({
                url: '/addfamily',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    console.log('API call successful:', response);
                    Swal.fire({
                        icon: 'success',
                        title: 'Product Family Added!',
                        text: 'Product Family Added Successfully',
                    }).then(() => {
                        window.location.href = '/createcategory';
                    });
                },
                error: function (xhr, status, error) {
                    console.error('API call error:', xhr.responseText);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: xhr.responseText,
                    });
                }
            });
        } else {

            $.ajax({
                url: '/createproduct',
                type: 'POST',
                data: new FormData($("#productForm")[0]),
                processData: false,
                contentType: false,
                success: function(response) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Product Added',
                        text: 'Product added successfully',
                    }).then(() => {
                        window.location.href = '/createcategory';
                    });
                },
                error: function(xhr, status, error) {
                    console.error('API call error:', xhr.responseText);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: xhr.responseText,
                    });
                }
            });
        }
    });
});
function validateQuantity(input) {
    if (input.value < 1) {

    }
    input.value = input.value.replace(/[^0-9]/g, '');
}

function goBack() {
    window.history.back();
}
    </script>
</body>
</html>
