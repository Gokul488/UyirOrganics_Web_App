        </div>
        <form id="search-form" action="" method="get" class="search-form">
          <input type="text" name="search" id="search" placeholder="Search by Product Name" value="<%= searchQuery || '' %>">
          <button type="button" id="reset-button" class="reset-icon">
            <i class="material-icons">refresh</i>
          </button>
          <button type="submit" id="search-button">Search</button>
        </form>
        
        <h1>STORE STOCK VIEW</h1>
        <p class="total-stock-value"><b>Stock Value</b>: ₹<%= totalStockValue.toFixed(2) %></p>
        <a href="/addproduct/<%= storeId %>?name=<%= name %>&contactname=<%= contactname %>" class="add-product-button">Update Stock</a>
  
        <button onclick="printOrders()" id="print-list-view">Print</button>      
      </div> 

        <div class="product-list">
            <% if (products && products.length > 0) { %>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>S.No</th>
                            <th class="sortable-column">
                                <a href="?storeId=<%= storeId %>&sortKey=productname&sortOrder=<%= sortOrder === 'asc' ? 'desc' : 'asc' %>">
                                    Product Name 
                                    <span class="sort-icon <%= sortKey === 'productname' ? (sortOrder === 'asc' ? 'ascending' : 'descending') : '' %>">▲</span>
                                </a>
                            </th>
                            
                            <th class="sortable-column">
                                <a href="?storeId=<%= storeId %>&sortKey=category&sortOrder=<%= sortOrder === 'asc' ? 'desc' : 'asc' %>">
                                    Category
                                    <span class="sort-icon <%= sortKey === 'category' ? (sortOrder === 'asc' ? 'ascending' : 'descending') : '' %>">▲</span>
                                </a>
                            </th>
                            <th>Code</th>
                            <th>HSN</th>
                            <th class="sortable-column">
                                <a href="?storeId=<%= storeId %>&sortKey=salesprice&sortOrder=<%= sortOrder === 'asc' ? 'desc' : 'asc' %>">
                                    Sales Price 
                                    <span class="sort-icon <%= sortKey === 'salesprice' ? (sortOrder === 'asc' ? 'ascending' : 'descending') : '' %>">▲</span>
                                </a>
                            </th>
                            <th class="sortable-column">
                                <a href="?storeId=<%= storeId %>&sortKey=qty&sortOrder=<%= sortOrder === 'asc' ? 'desc' : 'asc' %>">
                                    Quantity 
                                    <span class="sort-icon <%= sortKey === 'qty' ? (sortOrder === 'asc' ? 'ascending' : 'descending') : '' %>">▲</span>
                                </a>
                            </th>
                        </tr>
                    </thead>            

                    <tbody>
                        <% products.forEach(function(product, index) { %>
                            <tr data-product-id="<%= product.productid %>">
                                <td><%= (currentPage - 1) * itemsPerPage + index + 1 %></td>
                                <td><%= product.productname %></td>
                                <td><%= product.category %></td>
                                <td><%= product.code %></td>
                                <td><%= product.hsn %></td>
                                <td class="sales-price">₹<%= product.salesprice %></td>
                                <td class="<%= product.qty <= product.count ? 'low-quantity' : '' %>"><%= product.qty %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No products found.</p>
            <% } %>
        </div>

        <div id="product-grid" class="row d-none">
            <% products.forEach(function(product) { %>

                    <div class="card">
                        <div class="card-body">
                            <div class="product-image-container">
                                <% let productImage = images.find(function(image) {
                                    return image.productid === product.productid;
                                }); %>
                                <% if (productImage && productImage.imagepath) { %>
                                  <img src="<%= productImage.imagepath %>" alt="<%= product.productname %>" class="product-image">
                                <% } else { %>
                                  <div class="no-image-placeholder">No Image</div>
                                <% } %>
                              </div>                
                            <h5 class="card-title"><%= product.productname %></h5>
                            <p class="card-text"><b>Category:</b> <%= product.category %></p>
                            <p class="card-text"><b>Code:</b> <%= product.code %></p>
                            <p class="card-text"><b>HSN:</b> <%= product.hsn %></p>
                            <p class="card-text"><b>Sales Price:</b> ₹<%= product.salesprice %></p>
                            <span class="<%= product.qty <= product.count ? 'low-quantity' : '' %>">
                            </div>
                    </div>
            <% }); %>
        </div>
        <!-- Pagination -->
        <div class="pagination">
            <% if (totalPages > 0) { %>
                <% if (currentPage > 1) { %>
                    <a href="?storeId=<%= storeId %>&sortKey=<%= sortKey %>&sortOrder=<%= sortOrder %>&page=<%= currentPage - 1 %>">&laquo; Previous</a>
                <% } %>

                <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                    <% if (i === currentPage) { %>
                        <span class="current-page"><%= i %></span>
                    <% } else { %>
                        <a href="?storeId=<%= storeId %>&sortKey=<%= sortKey %>&sortOrder=<%= sortOrder %>&page=<%= i %>"><%= i %></a>
                    <% } %>
                <% } %>

                <% if (currentPage < totalPages) { %>
                    <a href="?storeId=<%= storeId %>&sortKey=<%= sortKey %>&sortOrder=<%= sortOrder %>&page=<%= currentPage + 1 %>">Next &raquo;</a>
                <% } %>
            <% } else { %>
                <p>No products found.</p>
            <% } %>
        </div>

